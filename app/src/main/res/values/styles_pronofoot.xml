<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Style AWI -->

    <style name="NomEquipe" parent="android:Widget.TextView">
        <item name="android:height">41dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/table_text</item>
    </style>

    <style name="Invisible" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
        <item name="android:height">0dp</item>
        <item name="android:width">0dp</item>
    </style>

    <style name="Classement" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/table_text</item>
        <item name="android:layout_margin">2.5dp</item>
    </style>

    <style name="ClassementPosition" parent="Classement">
        <item name="android:width">40sp</item>
    </style>

    <style name="ClassementVariation" parent="Classement">
        <item name="android:width">41sp</item>
    </style>

    <style name="ClassementNom" parent="Classement">
    </style>

    <style name="ClassementValeur" parent="Classement">
    </style>

    <style name="ClassementValeur2" parent="Classement">
        <item name="android:width">70dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="TextPronofoot" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/table_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="HeaderTableau" parent="TextPronofoot">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>

        <style name="TextBig" parent="TextPronofoot">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@color/table_text_header</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:height">48dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Label" parent="ShadowText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="TextHeader" parent="TextPronofoot">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/table_text_header</item>
        <item name="android:textStyle">bold</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Info" parent="TextPronofoot">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">italic</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DateProno" parent="NomEquipe">
        <item name="android:width">50dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/table_text_light</item>
    </style>

    <style name="BouttonPronofoot" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_background_states</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:width">140dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainConteneur">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="BoutonNavigationMoins" parent="android:Widget.Button">
        <item name="android:background">@drawable/ic_action_back</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:width">32dp</item>
        <item name="android:height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BoutonNavigationPlus" parent="android:Widget.Button">
        <item name="android:background">@drawable/ic_action_forward</item>
        <item name="android:layout_alignParentRight">true</item>
        <!-- <item name="android:layout_alignParentStart">false</item> -->
        <item name="android:width">32dp</item>
        <item name="android:height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButtonPronofoot" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/pronofoot_btn_radio_holo_light</item>
        <item name="android:width">32dp</item>
        <item name="android:height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RadioOk" parent="RadioButtonPronofoot">
        <item name="android:background">@drawable/abs__ic_cab_done_holo_light</item>
    </style>

    <style name="RadioKo" parent="RadioButtonPronofoot">
        <item name="android:background">@drawable/abs__ic_clear_search_api_holo_light</item>
    </style>

    <style name="NavMenuButtonPronofoot" parent="NavMenuButton">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="SwitchPronofoot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/table_text</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:width">350dp</item>
    </style>

    <!-- Autres Styles -->

    <style name="SignInEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/table_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="ShadowText">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="ListView">
        <item name="android:dividerHeight">2px</item>
        <item name="android:divider">@drawable/bootstrap_divider</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="ListSubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/table_text_light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Custom Spinner -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/list_item_background</item>
    </style>

    <style name="BootstrapButton">
        <item name="android:background">@drawable/button_background_states</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavMenuButton">
        <item name="android:textColor">@color/nav_text_selector</item>
        <item name="android:background">@drawable/nav_menu_button_background_selector</item>
    </style>

    <!-- Generated with http://android-holo-colors.com -->

    <style name="EditTextPronofoot" parent="android:Widget.EditText">
        <item name="android:background">@drawable/pronofoot_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="AutoCompleteTextViewPronofoot" parent="android:Widget.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/pronofoot_list_selector_holo_light</item>
        <item name="android:background">@drawable/pronofoot_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxPronofoot" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/pronofoot_btn_check_holo_light</item>
    </style>

    <style name="ButtonPronofoot" parent="android:Widget.Button">
        <item name="android:background">@drawable/pronofoot_btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonPronofoot" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/pronofoot_btn_default_holo_light</item>
    </style>

    <style name="SpinnerPronofoot" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/pronofoot_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/pronofoot_list_selector_holo_light</item>
    </style>

    <style name="SpinnerDropDownItemPronofoot" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/pronofoot_btn_radio_holo_light</item>
    </style>

    <style name="TabPronofoot">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:background">@drawable/pronofoot_tab_indicator_holo</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
    </style>

    <style name="TabTextPronofoot">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- v14 <item name="android:textAllCaps">true</item> -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
    </style>

    <style name="ProgressBarPronofoot" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/pronofoot_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/pronofoot_progress_indeterminate_horizontal_holo_light
        </item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="SeekBarPronofoot" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">
            @drawable/pronofoot_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/pronofoot_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/pronofoot_scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="RatingBarPronofoot" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/pronofoot_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/pronofoot_ratingbar_full_holo_light
        </item>
    </style>

    <style name="RatingBarBigPronofoot">
        <item name="android:progressDrawable">@drawable/pronofoot_ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/pronofoot_ratingbar_holo_light</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>

    <style name="RatingBarSmallPronofoot">
        <item name="android:progressDrawable">@drawable/pronofoot_ratingbar_small_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/pronofoot_ratingbar_small_holo_light
        </item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="TogglePronofoot" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/pronofoot_btn_toggle_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ListViewPronofoot" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/pronofoot_list_selector_holo_light</item>
    </style>

    <style name="ListViewPronofoot.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/pronofoot_list_selector_holo_light</item>
    </style>

    <style name="SpinnerItemPronofoot" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

</resources>